Usage sample

// Create synthesizer & playback engine
fz_synthesizer_t   *synth   = fz_new(fz_synthesizer);
fz_playback_alsa_t *adapter = fz_new(fz_playback_alsa, synth, 44100);

// Play some notes
fz_synthesizer_play(synth, fz_note_parse_frequency("C5"));
fz_synthesizer_play(synth, fz_note_parse_frequency("E5"));
fz_synthesizer_play(synth, fz_note_parse_frequency("Bb5"));

// Run for three seconds
fz_playback_adapter_start((fz_playback_adapter_t*) adapter);
sleep(3);
fz_playback_adapter_stop((fz_playback_adapter_t*) adapter);

// Free objects
fz_free(adapter);
fz_free(synth);
